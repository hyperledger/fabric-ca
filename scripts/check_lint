GOLINT="$GOPATH/bin/golint"

function runlint {
   for dir in `ls`
   do
      if [ -d $dir ]; then
        case "$dir" in
         vendor|bin|testdata|scripts)
           ;;
        *)
           $GOLINT $dir/...
           ;;
        esac
      fi
   done
}

echo "Running lint ..."
found=$(runlint)
if [ "$found" != "" ]; then
   echo "YOU MUST FIX THE FOLLOWING LINT PROBLEMS:"
   echo "$found"
   echo "END LINT PROBLEMS"
   exit 1
fi
echo "No lint errors were found"
